@model AddressBook.Models.Contact
@{
    ViewBag.Title = "Create";
}
<br>
<h4 class="text-success">Create new Contact</h4>
<br>
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="fullName">Full Name </label>
                <input class="form-control required" name="fullName" id="fullName" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="emailAddress">Email Address </label>
                <input class="form-control required" name="emailAddress" id="email" />
                @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <input class="form-control required" name="phoneNumber" id="phoneNumber" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="physicalAddress">Physical Address</label>
                <input class="form-control required" name="physicalAddress" id="physicalAddress" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <input id="create" name="Create" type="submit" class="btn-success" value="Create" style="bottom: 0;right: 0;" />
    </div>
</form>

